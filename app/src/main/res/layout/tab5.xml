<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mypage_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="프로필"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        android:textSize="19dp" />

    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="2px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mypage_image"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:foreground="@drawable/rounded_fg"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mypage_name"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mypage_age"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mypage_following"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:text="팔로잉"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/mypage_follower"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:text="팔로워"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="19dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mypage_following_number"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/mypage_follower_number"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="19dp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="가르칠 언어"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="19dp" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70dp"
            android:text="학습할 언어"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="19dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/mypage_teach"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="19dp" />


        <TextView
            android:id="@+id/mypage_learn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="19dp" />


    </LinearLayout>

    <View
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="자기소개"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        android:textSize="19dp" />

    </LinearLayout>

    <!--자기소개-->
    <TextView
        android:id="@+id/mypage_intro"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_margin="10dp"
        android:background="@drawable/black"
        android:gravity="top"
        android:hint=" 자기소개를 적어주세요 :) "
        android:textColor="@android:color/black" />


    <View
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="대표사진"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black"
            android:textSize="19dp" />

    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">


        <ImageView
            android:id="@+id/pf_img1"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <ImageView
            android:id="@+id/pf_img2"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/pf_img3"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/edit_profile_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 수정하기"
                android:layout_marginLeft="35dp"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_width="1dp"
            android:layout_height="190px"
            android:layout_marginBottom="10dp"/>


        <LinearLayout
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/start_streaming_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/streaming" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 방송하기"
                android:layout_marginLeft="50dp"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>