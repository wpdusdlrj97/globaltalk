<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:padding="3dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">


        <ImageView
            android:id="@+id/board_list_pfimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#eeeeee"
            android:foreground="@drawable/rounded_fg"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/board_list_name"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="1dp"
                android:text="조제연"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/board_list_teach"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:text="Korean"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/board_list_learn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="English"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bar"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bar10" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/board_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:padding="5dp"
            android:text="2019.06.06"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

    <TextView
        android:id="@+id/board_list_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="글을 작성해주세요"
        android:maxLines="5"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
               android:id="@+id/board_list_image0"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:background="#eeeeee"
               android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/board_list_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/board_list_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:id="@+id/board_list_image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/board_list_image4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/board_list_image5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:id="@+id/board_list_image6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/board_list_image7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/board_list_image8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        >

        <ImageView
            android:id="@+id/board_write_heart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/board_heart_count"
            android:layout_width="25dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/board_write_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/comment" />


        <ImageView
            android:id="@+id/board_write_translate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/translate" />

        <ImageView
            android:id="@+id/board_write_sound"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/volume" />

        <ImageView
            android:id="@+id/board_write_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="135dp"
            android:src="@drawable/more" />




    </LinearLayout>





</LinearLayout>