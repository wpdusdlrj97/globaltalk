<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/watch_news_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/before" />


        <TextView
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="  "
            android:textColor="#050505"
            android:textSize="24sp" />


        <Button
            android:id="@+id/watch_news_all_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 번역"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/watch_news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="뉴스 제목"
                    android:textIsSelectable="true"
                    android:textColorHighlight="#00FF00"
                    android:textColor="#050505"
                    android:textSize="24sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/watch_news_thumbnail"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="#eeeeee"
                    android:layout_marginTop="30dp"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/watch_news_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁㅁ"
                    android:textIsSelectable="true"
                    android:textColorHighlight="#00FF00"
                    android:textColor="#050505"
                    android:textSize="19dp" />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text=" ※ 원하는 부분을 발췌해 번역해보세요 ※ "
        android:textColor="#050505"
        android:textSize="14sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <EditText
            android:id="@+id/get_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="번역할 텍스트를 입력하세요"/>


        <ImageView
            android:id="@+id/watch_news_part_reset"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/refresh" />


        <ImageView
            android:id="@+id/watch_news_part_translate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/translate" />

        <ImageView
            android:id="@+id/watch_news_part_sound"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/volume" />



    </LinearLayout>





</LinearLayout>